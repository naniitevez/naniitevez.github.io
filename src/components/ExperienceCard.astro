---
interface Props {
  title: string;
  date: string;
  company: string;
  companyUrl: string;
  jobDescriptions: string[];
}

import link from "../assets/link_icon.png";
const { title, date, company, companyUrl, jobDescriptions } = Astro.props;
---

<article>
  <header>
    <p class="title">{title}</p>
    <div class="date">
      <p>{date}</p>
      <span class="line"></span>
    </div>
  </header>

  <div class="company">
    <img class="icon" src={link.src} width="12px" height="14px" alt="Icono de enlace." />
    <a href={companyUrl}>{company}</a>
  </div>
  <ul>
    {jobDescriptions.map((description) => <li>{description}</li>)}
  </ul>
</article>

<style>
  article {
    border: 1px solid var(--darkest-grey);
    border-radius: 10px;
    padding: 10px 25px;
    margin-bottom: 30px;
  }
  header {
    display: flex;
    justify-content: space-between;
    font-size: 20px;
    letter-spacing: 0.5px;
    border-bottom: 1px solid var(--darkest-grey);
    margin-bottom: 15px;
    color: var(--white);
  }
  .title {
    min-width: 60%;
    display: flex;
    align-items: center;
  }
  .date {
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }
  .date p {
    text-align: end;
  }
  .line {
    margin-left: 15px;
    width: 30px;
    height: 5px;
    background: var(--primary-color);
    border-radius: 10px;
  }
  .company {
    display: flex;
  }
  a {
    color: var(--white);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }
  a:hover {
    color: var(--primary-color);
  }
  .icon {
    margin-right: 5px;
  }
  ul {
    color: var(--secondary-grey);
    list-style: none;
    padding-left: 18px;
  }
  li {
    font-size: 18px;
  }
  ul li::before {
    content: "\2022";
    color: #03ba5b;
    font-size: 18px;
    margin-right: 0.5em;
  }
  @media (max-width: 900px) {
    header {
      font-size: 18px;
    }
    li {
      font-size: 16px;
    }
  }
  @media (max-width: 768px) {
    article {
      padding: 8px 15px;
    }
    header {
      font-size: 16px;
    }
    .line {
      width: 20px;
    }
  }
  @media (max-width: 580px) {
    .date {
      margin-left: 10px;
    }
    .date p {
      font-size: 14px;
    }
    ul {
      padding-left: 12px;
    }
  }
</style>
