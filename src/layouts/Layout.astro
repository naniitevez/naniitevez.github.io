---
interface Props {
  title: string;
}

// Supports weights 100-900
import "@fontsource-variable/onest";
import Header from "../components/Header.astro";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <div class="dot"></div>
      <Header />
      <slot />
    </main>
  </body>
</html>
<style is:global>
  :root {
    /* color-scheme: ligth dark; */
    --primary-color: #03ba5b;
    --primary-darkest-color: #145935;
    --primary-black: #161616;
    --secondary-black: #181818;
    --grey: #282828;
    --darkest-grey: #3a3a3a;
    --secondary-grey: #a5a5a5;
    --white: #edeeee;
  }
  html {
    font-family: "Onest Variable", sans-serif;
  }
  body {
    background: var(--primary-black);
    color: var(--white);
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  main {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .dot {
    position: absolute;
    margin-top: -400px;
    width: 800px;
    height: 700px;
    background: radial-gradient(
      circle,
      #03ba5b -60%,
      rgba(255, 0, 0, 0) 70%,
      rgba(255, 225, 225, 0) 30%
    );
  }
  section {
    max-width: 900px;
    width: 100%;
  }
  .section-margin {
    margin: 80px 0 90px;
  }
  .label-container {
    margin: 0 auto 70px;
    width: fit-content;
  }
  .label {
    width: fit-content;
    background: var(--grey);
    color: var(--secondary-grey);
    border-radius: 10px;
    font-size: 14px;
  }
</style>
